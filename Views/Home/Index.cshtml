@model IEnumerable<Ebook_Application.Models.Book>
@*@model PagedList.IPagedList<Ebook_Application.Models.Book>
@using PagedList.Mvc;*@
@{
    ViewBag.Title = "Home Page";
}
<style>
    p {
        text-align: center;
        color: white;
        font-size: 50px;
    }

    img {
        filter: grayscale(50%);
        filter: contrast(50%);
    }

    h1 {
        text-align: left;
    }

    * {
        box-sizing: border-box;
    }

    form {
        margin-top: 10px;
        float: right;
        width: 300px;
    }

        /* Style the search field */
        form.example input[type=text] {
            padding: 10px;
            font-size: 17px;
            border: 1px solid grey;
            float: left;
            width: 80%;
            background: #f1f1f1;
        }

        /* Style the submit button */
        form.example button {
            float: left;
            width: 20%;
            padding: 10px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none; /* Prevent double borders */
            cursor: pointer;
        }

            form.example button:hover {
                background: #0b7dda;
            }

        /* Clear floats */
        form.example::after {
            content: "";
            clear: both;
            display: table;
        }
</style>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<div class="container-fluid">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Content/BookImages/book3.jpg" alt="Los Angeles" style="width:100%; height:400px; ">
                <div class="carousel-caption">
                    <p>Many people, myself among them, feel better at the mere sight of a book</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/BookImages/book1.jpg" alt="Chicago" style="width: 100%; height:400px;">
                <div class="carousel-caption">
                    <p>
                        Good friends, good books, and a sleepy conscience: this is the ideal life
                    </p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/BookImages/book4.jpg" alt="New York" style="width: 100%; height: 400px;">
                <div class="carousel-caption">
                    <p>If you don’t like to read, you haven’t found the right book</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container-fluid">
    @using (@Html.BeginForm("Search", "View"))
    {
        <input type="text" placeholder="Enter Book Name" id="search" name="search" autofocus="" />
        <input type="submit" value="search" />
    }
</div>
<div class="container-fluid">
    <div id="large-th">
        <div class="col-md-4">
            <div class="container">
                <br>
                @foreach (var item in Model)
                {
                    @Html.Partial("BookCard", item)
                }
            </div>
        </div>
    </div>

</div>
