@model Ebook_Application.Models.Category

@{
    Layout = "";
}
<style>
    img {
        width: 400px;
        height:300px;
        padding-top: 30px;
        padding-bottom: 20px;
        filter: grayscale(50%);
        filter: contrast(50%);
        
    }
    .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 50px;
        filter: contrast(50%);
       
    }
    .text-block {
        position: absolute;
        top: 50%;
        left: 50%;
        /*background-color: black;*/
        filter: contrast(50%);
        filter: blur(50%);
        background-color:transparent
    }

</style>

<div class="col-md-4">
    <a href="@Url.Action("CategoryBook","View",Model)" id="CategoryName">
        <img src="~/Content/CategoryImages/@Model.CategoryImage">
    </a>
        <div class="centered text-block">@Model.CategoryName</div>
</div>
